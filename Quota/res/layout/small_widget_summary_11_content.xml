
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/summarypanel"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:gravity="left"
    	android:orientation="vertical"
   
        android:layout_marginRight="2dip"
       >
       

       <TextView  
         	android:id="@+id/headerlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@android:color/transparent"
  			android:layout_gravity="center_horizontal"
            android:textSize="11dp"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
            android:textColor="#FFFFFFFF"
            android:singleLine="true"
            android:text="Local Data usage" />
            
            
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/txtpanel"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:visibility="gone"
    	android:gravity="right"
       >
       

            
         <TextView  
         	android:id="@+id/txtSummary"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|right"
            android:textSize="11dp"
            android:textColor="#FFFFFFFF"
            android:singleLine="false"
            android:text="" />
            
  		</LinearLayout>
  		 
  		<!--  Progress Panel -->
  		
  	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/progresspanel"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:visibility="gone"
       >
       
  
  	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/p1panel"
    	android:layout_width="fill_parent"
    	android:layout_height="12dp"
   		android:layout_marginTop="16dp"
	  	android:orientation="horizontal"
       >
       
       <TextView  
         	android:id="@+id/txtp1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@layout/red_circle"
            android:textSize="12dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="" />
            
    <ProgressBar 
  		
  		android:progress="50" 
    	android:layout_height="12dp" 
    	android:layout_width="fill_parent"
    	android:id="@+id/bar_1" 
    	style="?android:attr/progressBarStyleHorizontal" 
  	    android:progressDrawable="@layout/widget_progress"
     	android:max="100"/> 
              
    </LinearLayout>
     
  		<!--  Progress Bar 2 -->
 
   	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/p2panel"
    	android:layout_width="fill_parent"
    	android:layout_height="12dp"
   		android:layout_marginTop="4dp"
	  	android:orientation="horizontal"
       >
       
       <TextView  
         	android:id="@+id/txtp2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@layout/red_circle"
            android:textSize="12dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="" />
            
              
    <ProgressBar 
  		android:progress="10" 
  	 	android:layout_height="12dp" 
     	android:id="@+id/bar_2" 
    	style="?android:attr/progressBarStyleHorizontal" 
    	android:layout_width="fill_parent"
		android:progressDrawable="@layout/widget_progress"
     	android:max="100"/> 
    </LinearLayout>
  	  		
 </LinearLayout>
     		
 </LinearLayout>
  		

