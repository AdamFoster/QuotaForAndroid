
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="6dip"
    android:gravity="left"
    android:orientation="horizontal"
    >
    
    <!-- android:src="@drawable/iinet" -->
    <ImageView
        android:id="@+id/logo"
        android:gravity="left"
        android:layout_marginTop="18dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="6dip"
        android:layout_width="37dip"
        android:layout_height="36dip"
       
         />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/headerlabel"
            android:layout_width="130dip"
            android:layout_height="0dip"
            android:singleLine="true"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_marginTop="4dip"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="14dip"
     		android:textColor="#FFb1b6c3"
            android:text="" />
            
        <TextView  
            android:id="@+id/headersublabel"
            android:layout_width="130dip"
            android:layout_height="0dip"
            android:singleLine="true"
            android:gravity="top"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="#FFFFFFFF"
            android:ellipsize="end"
            android:text="" />
            
    </LinearLayout>
    
    
   <!--  Col2 -->
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/summarypanel"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:gravity="left"
    	android:orientation="vertical"
   
        android:layout_marginRight="6dip"
       >
 
       
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/txtpanel"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:visibility="gone"
    	android:gravity="right"
       >
         <TextView  
         	android:id="@+id/txtSummary"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|right"
            android:textSize="16dp"
            android:textColor="#FFFFFFFF"
            android:singleLine="false"
            android:text="" />
            
  		</LinearLayout>
  		 
  		<!--  Progress Panel -->
  		
  	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/progresspanel"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:visibility="gone"
       >
       
  
  	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/p1panel"
    	android:layout_width="fill_parent"
    	android:layout_height="16dp"
   		android:layout_marginTop="16dp"
	  	android:orientation="horizontal"
       >
       
       <TextView  
         	android:id="@+id/txtp1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@layout/red_circle"
            android:textSize="16dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="" />
            
    <ProgressBar 
  		
  		android:progress="50" 
    	android:layout_height="16dp" 
    	android:layout_width="fill_parent"
    	android:id="@+id/bar_1" 
    	style="?android:attr/progressBarStyleHorizontal" 
  	    android:progressDrawable="@layout/widget_progress"
     	android:max="100"/> 
              
    </LinearLayout>
     
  		<!--  Progress Bar 2 -->
 
   	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/p2panel"
    	android:layout_width="fill_parent"
    	android:layout_height="16dp"
   		android:layout_marginTop="8dp"
	  	android:orientation="horizontal"
       >
       
       <TextView  
         	android:id="@+id/txtp2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@layout/red_circle"
            android:textSize="16dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="" />
            
              
    <ProgressBar 
  		android:progress="10" 
    	android:layout_height="fill_parent" 
    	android:id="@+id/bar_2" 
    	style="?android:attr/progressBarStyleHorizontal" 
    	android:layout_width="fill_parent"
		android:progressDrawable="@layout/widget_progress"
     	android:max="100"/> 
    </LinearLayout>
     
  	  		
     </LinearLayout>
     	
     		
  		</LinearLayout>
  		
    
</LinearLayout>


